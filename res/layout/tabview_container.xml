                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="通讯录"
                android:textColor="#9A9A9A"
                android:textSize="12sp" />
                        
                        
            <ImageView
                android:id="@+id/ib_contact_list"
